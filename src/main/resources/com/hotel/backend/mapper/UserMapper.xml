<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hotel.backend.mapper.UserMapper">
	<resultMap id="BaseResultMap" type="com.hotel.backend.entity.User">
		<id column="USER_ID" jdbcType="CHAR" property="userId" />
		<result column="USER_NAME" jdbcType="VARCHAR" property="userName" />
		<result column="USER_PASSWORD" jdbcType="VARCHAR" property="userPassword" />
		<result column="USER_EMAIL" jdbcType="VARCHAR" property="email" />
		<result column="USER_PHONE" jdbcType="CHAR" property="phone" />
		<result column="USER_DESC" jdbcType="VARCHAR" property="description" />
		<result column="USER_STATUS" jdbcType="CHAR" property="status" />
		<result column="USER_HOTEL_ID" jdbcType="CHAR" property="hotelId" />

	</resultMap>


	<sql id="Base_Column_List">
		USER_ID,USER_NAME,USER_PASSWORD,USER_EMAIL,USER_PHONE,USER_DESC,USER_STATUS,USER_HOTEL_ID
	</sql>

	<select id="getUserById" resultMap="BaseResultMap"
		parameterType="java.lang.String">
		SELECT
		<include refid="Base_Column_List" />
		FROM BUSER where USER_ID=#{userId}
	</select>

	<select id="getUserByUsername" resultMap="BaseResultMap"
		parameterType="java.lang.String">
		SELECT
		<include refid="Base_Column_List" />
		FROM buser where USER_NAME=#{userName}
	</select>

	<select id="getAllUser" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List" />
		FROM BUSER
	</select>

	<select id="getUserTotalCount" resultType="java.lang.Integer">
		SELECT COUNT(*) FROM
		BUSER
	</select>

	<insert id="createUser" parameterType="com.hotel.backend.entity.User">
		INSERT INTO
		BUSER
		(USER_ID,USER_NAME,USER_PASSWORD,USER_EMAIL,USER_PHONE,USER_DESC,USER_STATUS,USER_HOTEL_ID)
		VALUES
		(#{userId},#{userName},#{userPassword},#{email},#{phone},#{description},#{status},#{hotelId})
	</insert>
	<update id="updateUser" parameterType="com.hotel.backend.entity.User">
		update BUSER
		set
		USER_EMAIL =
		#{email},
		USER_PHONE = #{phone}
		where
		USER_ID=#{userId}

	</update>
	<update id="changePwdById" parameterType="map">
	update BUSER
		set
		USER_PASSWORD = #{userPassword}
		where
		USER_ID=#{userId}
	</update>
	<delete id="deleteUserById" parameterType="java.lang.String">
	DELETE FROM BUSER
		WHERE USER_ID=#{userId}
	</delete>
</mapper>